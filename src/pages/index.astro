<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Playfair+Display:ital,wght@1,600&display=swap');

  :root { 
    font-family: 'Inter', sans-serif; 
  }
  
  body {
    background-color: #0a0a0a; 
    color: white;
    display: flex;
    justify-content: center;
    padding: 2rem;
    background-image: radial-gradient(circle, rgba(163, 255, 51, 0.2) 1px, transparent 1px);
    background-size: 10px 10px;
  }
  
  main {
    width: 100%;
    max-width: 400px;
    text-align: center;
  }
  
  header { margin-bottom: 2rem; }
  
  .avatar {
    font-size: 3rem;
    background: #a3ff33; 
    width: 80px;
    height: 80px;
    line-height: 80px;
    border-radius: 50%;
    margin: 0 auto 1rem;
    color: #0a0a0a;
  }
  
  h1 { 
    font-size: 1.5rem; 
    margin: 0; 
    font-weight: 400;
  }

  .accent {
    color: #a3ff33;
    font-family: 'Playfair Display', serif;
    font-style: italic;
  }
  
  p { color: #a1a1a1; margin-top: 0.5rem; }
  
  .links-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Lime outline buttons that fill on hover */
  .links-container :global(a) {
    border: 1px solid #a3ff33;
    color: #a3ff33;
    text-decoration: none;
    padding: 0.8rem;
    border-radius: 4px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 1px;
    transition: 0.1s ease;
  }

  .links-container :global(a:hover) {
    background: #a3ff33;
    color: #0a0a0a;
    box-shadow: 0 0 15px rgba(163, 255, 51, 0.4);
  }
  
  .avatar-img {
    width: 100px;
    height: 100px;
    border-radius: 50%; 
    object-fit: cover;  
    border: 4px solid #a3ff33;
    margin-bottom: 1rem;
  }
</style>